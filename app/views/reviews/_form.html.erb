<div class="card m-2">
    <div class="card-body">
        <% if @review.errors.present? %>
            <p>
                <%= @review.errors.full_messages.join(", ") %>
            </p>
        <% end %>
        <%= form_for [@idea, @review] do |f| %>
            <div class="form-group">
                <%= f.label :Review, class: "text-secondary" %>
                <%= f.text_field(:title, class: "form-control") %>
            </div>
            <div class="form-group">
                <%= f.label :Description, class: "text-secondary" %>
                <%= f.text_area :body, cols: 60, rows: 5, class: "form-control" %>
            </div>
            <%= f.submit class: "btn btn-dark" %>
        <% end %>
    </div>
</div>