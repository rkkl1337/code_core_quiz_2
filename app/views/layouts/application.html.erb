<!DOCTYPE html>
<html>
  <head>
    <title>IdeaFactory</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Idea Factory</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <div class="navbar-nav ml-auto">
          <%= link_to('Ideas', ideas_path, class: "nav-item nav-link") %>
          <% if user_signed_in? %>
            <%= link_to('New Idea', new_idea_path, class: "nav-item nav-link") %>
          <% end %>
          <% if user_signed_in? %>
            <%= link_to('Sign Out', sessions_path, method: :delete, class: "nav-item nav-link") %>
          <% else %>
            <%= link_to("Sign In", new_sessions_path, class: "nav-item nav-link") %>
            <%= link_to("Sign Up", new_user_path, class: "nav-item nav-link") %>
          <% end %>
        </div>
      </div>

    
    </nav>
    <div class="container mt-2">
      <% flash.each do |type, message| %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= message %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
