<div class="container">
<h1 class="text-center">Idea</h1>
    <div class="card m-2">
        <div class="card-body">
            <h5 class="card-title text-warning"><%= @idea.title %></h5>
            <p class="card-text"><%= @idea.body %></p>
            <small class="card-text font-italic">Idea by: <%=@idea.user&.full_name %></small>
            <div class="mt-2">
                <% if user_signed_in? && can?(:crud, @idea) %>
                    <button class="btn btn-dark"><%= link_to 'Edit', edit_idea_path(@idea.id), class: "text-white" %></button>
                    <button class="btn btn-dark"><%= link_to 'Delete', idea_path(@idea.id), method: :delete, class: "text-white" %></button>
                <% end %>
            </div>
        </div>
    </div>
    <% if user_signed_in? %>
        <%= render "reviews/form" %>
    <% end %>
    <h1 class="text-center">Reviews</h1>
    <% @reviews.each do |review| %>
        <div class="card m-2">
            <div class="card-body">
                <p class="card-title text-secondary"><%= review.title %></p>
                <p class="card-text"><%= review.body %></p>
                <small class="card-text font-italic">Review by: <%=review.user&.full_name %></small>
                <div class="mt-2">
                    <% if can? :edit, review %>
                        <button class="btn btn-dark btn-sm"><%= link_to 'Edit', edit_review_path(review.id), class: "text-white" %></button>
                        <button class="btn btn-dark btn-sm"><%= link_to 'Delete', review_path(review.id), method: :delete, class: "text-white" %></button>
                    <% end %>
                </div>
            </div>
        </div>
    <% end %>
</div>