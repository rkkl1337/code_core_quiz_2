<div class="container">
    <div class="card m-2">
        <div class="card-body">
            <h5 class="card-title text-warning"><%= @idea.title %></h5>
            <p class="card-text"><%= @idea.body %></p>
            <small class="card-text font-italic">Idea by: <%=@idea.user&.full_name %></small>
            <div class="mt-2">
                <button class="btn btn-dark"><%= link_to 'Edit', edit_idea_path(@idea.id), class: "text-white" %></button>
                <button class="btn btn-dark"><%= link_to 'Delete', idea_path(@idea.id), method: :delete, class: "text-white" %></button>
            </div>
        </div>
    </div>
    <% @reviews.each do |review| %>
        <div class="card m-2">
            <div class="card-body">
                <p class="card-title text-secondary"><%= review.title %></p>
                <p class="card-text"><%= review.body %></p>
                <small class="card-text font-italic">Review by: <%=review.user&.full_name %></small>
            </div>
        </div>
    <% end %>
</div>